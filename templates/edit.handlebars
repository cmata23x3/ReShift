<div id="Edit">
  <h1>Edit your personal information</h1>
  <div class="error">
    {{#if error}}
      {{error}}
    {{/if}}
  </div>
  <form id="signup-form">
    <div>Name: <input type="text" name="name" required /></div>
    <div>Email: <input type="text" name="email" required /></div>
    <div>Password: <input type="password" name="password" required /></div>
    <div>Confirm Password: <input type="password" name="confirm" required /></div>
    <button id="saveChanges-btn" type="submit"> Save </button>
  </form>
</div>
